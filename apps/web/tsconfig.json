{
  "extends": "@atrangi/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@atrangi/core/services/*": [
        "../../packages/server/core/src/services/*.service.tsx",
        "../../packages/server/core/src/services/*.service.ts"
      ],
      "@atrangi/core/utils/*": ["../../packages/server/core/src/utils/*"],
      "@atrangi/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}